<%= form_for(@chunk) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="input-group">
    <%= f.text_field :description, placeholder: "New to do chunk...", class: "form-control" %>
    <span class="input-group-btn">
		<%= f.submit "Post", class: "btn btn-default" %>
	</span>
  </div>
<% end %>